<% provide(:title,"Главная")%>

<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
           <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Добро пожаловать в Twitter!</h1>

  <h2>
    это домашняя страница для социальной сети <a href="http://web.method.kz/">курса по
    Ruby on Rails</a>
    sample application.
  </h2>

  <%= link_to "Регистрация", signup_path , class: "btn btn-lg btn-primary" %>
  <%= link_to image_tag("rails.png", alt: "Rails logo"),
        'http://rubyonrails.org/' %>
</div>

    
<% end %>